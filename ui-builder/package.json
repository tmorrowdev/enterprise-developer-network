{
  "name": "cre8-ui-builder",
  "version": "1.0.0",
  "description": "Design-system informed no-code UI builder using Claude SDK and WebContainer API",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:client": "vite build",
    "build:server": "tsc && node build-server.js",
    "build:netlify": "npm run build:server && npm run build:netlify-client",
    "build:netlify-client": "npm run copy:netlify-files && vite build --config vite.netlify.config.js",
    "copy:netlify-files": "cp public/index-netlify.html public/index.html && cp public/app-netlify.js public/app.js",
    "start": "node dist/server.js",
    "test": "tsx test-claude-code.ts",
    "test:claude": "tsx test-claude-code.ts",
    "test:netlify": "node test-netlify.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@webcontainer/api": "^1.2.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "marked": "^12.0.0",
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "@netlify/functions": "^2.4.0",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/uuid": "^9.0.7",
    "serve-favicon": "2.5.1",
    "@types/serve-favicon": "^2.5.7",
    "@types/cors": "^2.8.17",
    "vite": "^5.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0"
  },
  "keywords": [
    "ui-builder",
    "no-code",
    "design-system",
    "claude",
    "webcontainer"
  ]
}